# md2word nginx 反向代理配置示例
# 将此配置添加到您的 nginx 配置文件中

server {
    listen 80;
    server_name your-domain.com;  # 替换为您的域名

    # 客户端请求体大小限制（允许上传较大的 Markdown 内容）
    client_max_body_size 10M;

    # 代理到 Next.js 应用（假设运行在 localhost:3000）
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        
        # 请求头设置
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 超时设置（重要！）
        # 连接超时
        proxy_connect_timeout 60s;
        # 发送请求超时
        proxy_send_timeout 300s;  # 5分钟，LLM处理可能需要较长时间
        # 读取响应超时
        proxy_read_timeout 300s;  # 5分钟，等待后端响应
        
        # 缓冲设置（处理大响应）
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;
        
        # 禁用缓冲以支持流式响应（如果需要）
        # proxy_buffering off;
        
        # WebSocket 支持（如果 Next.js 使用 WebSocket）
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # 如果使用 HTTPS，取消注释以下配置
    # listen 443 ssl;
    # ssl_certificate /path/to/your/cert.pem;
    # ssl_certificate_key /path/to/your/key.pem;
}

